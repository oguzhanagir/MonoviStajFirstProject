@model MonoviStajFirstProject.Entities.Concrete.User
@{
    ViewData["Title"] = "UpdateUser";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row">
        @using (Html.BeginForm("UpdateUser", "User", FormMethod.Post))
        {
            <div class="form-group mb-5">
                <label>Ad</label>
                @Html.TextBoxFor(x => x.FirstName, new { @class = "form-control input-default" })
                
            </div>
            <div class="form-group mb-5">
                <label>Soyad</label>
                @Html.TextBoxFor(x => x.LastName, new { @class = "form-control input-default" })
            </div>

            <div class="form-group mb-5">
                <label>Mail</label>
                @Html.TextBoxFor(x => x.Mail, new { @class = "form-control input-default" })
            </div>
            <div class="form-group mb-5">
                <label>Telefon Numarası</label>
                @Html.TextBoxFor(x => x.PhoneNumber, new { @class = "form-control input-default" })
            </div>


            <button type="submit" class="btn btn-primary">Kullanıcı Güncelle</button>
        }

    </div>
</div>