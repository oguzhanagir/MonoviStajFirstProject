@model IEnumerable<MonoviStajFirstProject.Entities.Concrete.User>
@{
    ViewData["Title"] = "UserList";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<table class="table custom-table">
    <thead class="thead-dark">
        <tr>
            <th scope="col">#</th>
            <th scope="col">Ad</th>
            <th scope="col">Soyad</th>
            <th scope="col">Mail</th>
            <th scope="col">Telefon Numarası</th>
            <th scope="col">Kullanıcı Sil</th>
            <th scope="col">Kullanıcı Güncelle</th>
        </tr>
    </thead>
    <tbody>
       @foreach (var user in Model)
        {
            <tr>
                <th scope="row">@user.Id</th>
                <td>@user.FirstName</td>
                <td>@user.LastName</td>
                <td>@user.Mail</td>
                <td>@user.PhoneNumber</td>
                <td><a href="/User/DeleteUser/@user.Id" class="btn btn-danger">Sil</a></td>
                <td><a href="/User/UpdateUser/@user.Id" class="btn btn-warning">Güncelle</a></td>
            </tr>
        }
    
    </tbody>
</table>


<style>
    .custom-table {
        width: 100%;
        border-collapse: collapse;
    }

        .custom-table th, .custom-table td {
            padding: 8px;
            text-align: left;
            border-bottom: 1px solid #ddd;
        }

        .custom-table th {
            background-color: #343a40;
            color: white;
        }

        .custom-table tr:hover {
            background-color: #f5f5f5;
        }

        .custom-table .btn {
            padding: 6px 12px;
            text-align: center;
            text-decoration: none;
            display: inline-block;
            border-radius: 4px;
            font-size: 14px;
        }

        .custom-table .btn-danger {
            background-color: #dc3545;
            color: white;
            border: none;
        }

            .custom-table .btn-danger:hover {
                background-color: #c82333;
            }

        .custom-table .btn-warning {
            background-color: #ffc107;
            color: black;
            border: none;
        }

            .custom-table .btn-warning:hover {
                background-color: #e0a800;
            }
</style>
